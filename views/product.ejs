<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
			integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
			crossorigin="anonymous"
		/>
		<title>Food</title>
	</head>

	<body>
		<div class="container">
			<h4 class="mb-4">
				<a href="/admin">Admin</a>
			</h4>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Price</th>
						<th scope="col">Category</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					<% for (i = 0; i < products.length; i++) { %>
					<tr>
						<td>
							<img src="<%= products[i].pictureUrl %>" style="height: 100px; width: 100px; object-fit: cover" />
						</td>
						<td><%= products[i].name %></td>
						<td><%= products[i].price %></td>
						<td><%= products[i].category %></td>
						<td>
							<button onclick="updateHandler('<%= products[i].id %>')" class="btn btn-warning">Update</button>
							<button onclick="deleteHandler('<%= products[i].id %>')" class="btn btn-danger">Delete</button>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		<script>
			function deleteHandler(id) {
				fetch(`product/${id}`, {
					method: "DELETE",
				})
					.then(function (response) {
						location.reload();
					})
					.catch((error) => {
						log(error);
					});
			}
			function updateHandler(id) {
				window.location.href = `product/${id}`;
			}
		</script>
	</body>
</html>
