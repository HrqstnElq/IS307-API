<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="stylesheet"
			href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
			integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
			crossorigin="anonymous"
		/>
		<title>Food</title>
	</head>

	<body>
		<div class="container">
			<h4 class="mb-4">
				<a href="/admin">Admin</a>
			</h4>
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Color</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					<% for (i = 0; i < categories.length; i++) { %>
					<tr>
						<td>
							<img src="<%= categories[i].pictureUrl %>" style="height: 100px; width: 100px; object-fit: cover" />
						</td>
						<td><%= categories[i].name %></td>
						<td>
							<div
								style="
									width: 30px;
									height: 30px;
									border-radius: 15px;
									border: 1px solid;
									background-color: <%= categories[i].color %>;
								"
							></div>
						</td>
						<td>
							<button onclick="updateHandler('<%= categories[i].id %>')" class="btn btn-warning">Update</button>
						</td>
					</tr>
					<% } %>
				</tbody>
			</table>
		</div>
		<script>
			function updateHandler(id) {
				window.location.href = `category/${id}`;
			}
		</script>
	</body>
</html>
